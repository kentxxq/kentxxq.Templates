{
    "$schema": "http://json.schemastore.org/template",
    "author": "kentxxq",
    "classifications": [
        "Aspnetcore"
    ],
    "identity": "kentxxq.Templates.Aspnetcore",
    "name": "kentxxq.Templates.Aspnetcore",
    "shortName": "k-webapi",
    "sourceName": "kentxxq.Templates.Aspnetcore",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "preferNameDirectory": true,
    "symbols": {
        "EnableQuartz": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true",
            "isRequired": true
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!EnableQuartz)",
                    "exclude": [
                        "kentxxq.Templates.Aspnetcore.Webapi/Jobs/**",
                        "kentxxq.Templates.Aspnetcore.Webapi/Controllers/JobController.cs",
                        "kentxxq.Templates.Aspnetcore.Webapi/SO/Jobs/**"
                    ]
                },
                {
                    "exclude": [
                        ".vs/**",
                        "nuget/**",
                        "**/bin/**",
                        "**/obj/**",
                        "kentxxq.Templates.Aspnetcore.Webapi/*.log"
                    ]
                }
            ]
        }
    ]
}